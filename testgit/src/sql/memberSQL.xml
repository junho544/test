<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace="sampleSQL">
	 <typeAlias alias="member" type="Now.DTO.memberDTO"/> 
	
	<insert id="joinmember" parameterClass="member">
		insert into nowmember (NICKNAME,PW,EMAIL)
		values(#nickname#,#pw#,#email#)
	</insert>
	
	
    <select id="userCheck" parameterClass="member"  resultClass="int">
		select count(*) from nowmember where nickname=#nickname# and pw=#pw#
	</select>
	
	
    <select id="getMember" parameterClass="Now.DTO.memberDTO" resultClass="Now.DTO.memberDTO">
		select * from nowmember where nickname=#nickname#
	</select>
	
	
	</sqlMap>